<section class="Section {% unless block.settings.image %}Section--spacingNormal{% endunless %}" {{ block.shopify_attributes }}>
  {%- capture section_content -%}
    <div class="FeatureText__ContentWrapper">
      <div class="FeatureText__Content">
        {%- if block.settings.subheading != blank or block.settings.title != blank -%}
          <header class="SectionHeader">
            {%- if block.settings.heading_image != blank -%}
              {%- include 'image-size', sizes: '400,600,700,800,900,1000,1200', image: block.settings.heading_image -%}
              <div class="AspectRatio" style="max-width: {{ block.settings.heading_image.width }}px; --aspect-ratio: {{ block.settings.heading_image.aspect_ratio }}">
                {%- assign heading_image_url = block.settings.heading_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                <img class="Image--lazyLoad Image--slide{{ block.settings.image_position | capitalize }}" data-src="{{ heading_image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ block.settings.heading_image.alt | escape }}">
                <noscript>
                  <img src="{{ block.settings.heading_image | img_url: '800x' }}" alt="{{ block.settings.heading_image.alt | escape }}">
                </noscript>
              </div>
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              <h3 class="SectionHeader__SubHeading Heading h3">{{ block.settings.subheading | escape }}</h3>
            {%- endif -%}

            {%- if block.settings.title != blank -%}
              <h2 class="SectionHeader__Heading Heading h2">{{ block.settings.title | escape }}</h2>
            {%- endif -%}

            {%- if block.settings.content != blank -%}
              <div class="SectionHeader__Description Rte">
                {{ block.settings.content }}
              </div>
            {%- endif -%}

            {%- if block.settings.link_text != blank -%}
              <a href="{{ block.settings.link_url }}" class="Link h3">{{ block.settings.link_text | escape }}</a>
            {%- endif -%}
          </header>
        {%- endif -%}
      </div>
    </div>
  {%- endcapture -%}

  {%- capture section_image -%}
    {%- if block.settings.image != blank -%}
      <div class="FeatureText__ImageWrapper">
        {%- include 'image-size', sizes: '400,600,700,800,900,1000,1200', image: block.settings.image -%}

        <div class="AspectRatio" style="max-width: {{ block.settings.image.width }}px; --aspect-ratio: {{ block.settings.image.aspect_ratio }}">
          {%- assign image_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="Image--lazyLoad Image--slide{{ block.settings.image_position | capitalize }}" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ block.settings.image.alt | escape }}">

          <noscript>
            <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt | escape }}">
          </noscript>
        </div>
      </div>
    {%- endif -%}
  {%- endcapture -%}

  <div class="FeatureText {% if block.settings.image != blank %}FeatureText--withImage FeatureText--image{{ block.settings.image_position | capitalize }}{% endif %}">
    {%- if block.settings.image_position == 'left' -%}
      {{- section_image -}}
      {{- section_content -}}
    {%- else -%}
      {{- section_content -}}
      {{- section_image -}}
    {%- endif -%}
  </div>
</section>
