<section class="Section" {{ block.shopify_attributes }}>
  {%- capture event_image -%}
    {%- if block.settings.event_image != blank -%}
      <div class="FeatureText__ImageWrapper">
        {%- include 'image-size', sizes: '400,600,700,800,900,1000,1200', image: block.settings.event_image -%}

          {%- assign image_url = block.settings.event_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="Image--lazyLoad Image--slideRight" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ block.settings.event_image.alt | escape }}">

          <noscript>
            <img src="{{ block.settings.event_image | img_url: '800x' }}" alt="{{ block.settings.event_image.alt | escape }}">
          </noscript>
      </div>
    {%- endif -%}
  {%- endcapture -%}

  <div class="FeatureText SideBySide">
    <div class="FeatureText__ContentWrapper">
      <div class="FeatureText__Content">
        {%- if block.settings.link_url != blank -%}<a href="{{block.settings.link_url}}">{%- endif -%}
            {{- event_image -}}
        {%- if block.settings.link_url != blank -%}</a>{%- endif -%}
      </div>
    </div>
    <div class="FeatureText__ContentWrapper">
      <div class="FeatureText__Content">
        <header class="SectionHeader">
            {%- if block.settings.title != blank -%}
              <h2 class="SectionHeader__Heading Heading h2">{{ block.settings.title | escape }}</h2>
            {%- endif -%}
            {%- if block.settings.location != blank -%}
              <h3 class="SectionHeader__SubHeading Heading h4">{{ block.settings.location | escape }}</h3>
            {%- endif -%}
        </header>

        {%- if block.settings.description != blank -%}
            <div class="SectionContent Rte">
                <div class="SectionContent__Description Rte">
                    {{ block.settings.description }}
                </div>
            </div>
        {%- endif -%}

        {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
            <footer class="SectionFooter">
                <a href="{{ block.settings.link_url }}" class="Link">{{ block.settings.link_text }}</a>
            </footer>
        {%- endif -%}
      </div>
    </div>
  </div>

</section>
