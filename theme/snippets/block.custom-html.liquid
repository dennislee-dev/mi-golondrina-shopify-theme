<section class="Section Section--spacing{{ block.settings.section_size}}" id="section-{{ block.id }}" {{ block.shopify_attributes }}>
  <div class="Container">
    {%- if block.settings.subheading != blank or block.settings.title != blank -%}
      <header class="SectionHeader SectionHeader--center">
        {%- if block.settings.subheading != blank -%}
          <h3 class="SectionHeader__SubHeading Heading h3">{{ block.settings.subheading | escape }}</h3>
        {%- endif -%}

        {%- if block.settings.title != blank -%}
          <h2 class="SectionHeader__Heading Heading h2">{{ block.settings.title | escape | replace:'|','<br />' }}</h2>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="Rte" style="text-align: center">
      {{ block.settings.html }}
    </div>
  </div>
</section>