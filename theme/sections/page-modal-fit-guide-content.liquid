<div class="Container {% if section.settings.page_width == 'fullwidth' %}Container--fullwidth{% endif %}">
  {% if page.template_suffix == 'modal-fit-guide' %}
  <header class="PageHeader">
    <div class="SectionHeader SectionHeader--center">
      <h1 class="SectionHeader__Heading Heading h2">{{ section.settings.heading | default: page.title }}</h1>
    </div>
  </header>
  {% endif %}
  <div class="PageContent Text--alignCenter {{ section.settings.css_classes }}">
    <img src="{{ section.settings.fit_guide_image_mobile | img_url: '780x' }}" style="width: 100%; max-width: 780px;" class="hidden-tablet-and-up">
    <img src="{{ section.settings.fit_guide_image | img_url: '1000x' }}" style="width: 100%; max-width: 800px;" class="hidden-phone">
  </div>
</div>

{%- if modal_background != empty -%}
<style>
#modal-fit-guide {
  background: #fff url({{ section.settings.modal_background | img_url: '1600x' }}) center center no-repeat;
  background-size: cover;
}
</style>
{%- endif -%}

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "header",
      "content": "Page Settings"
    },
    {
      "id": "modal_background",
      "type": "image_picker",
      "label": "Modal Background"
    },
    {
      "id": "fit_guide_image",
      "type": "image_picker",
      "label": "Fit Guide Image",
      "info": "Transparent png, 1600 x 1000"
    },
    {
      "id": "fit_guide_image_mobile",
      "type": "image_picker",
      "label": "Fit Guide Image (Mobile)",
      "info": "Transparent png, 780 px wide, portrait orientation"
    }
  ]
}
{% endschema %}